<h1><%=@article.title%></h1>
<p> <%=@article.text %></p>
<%= link_to "edit", edit_article_path(@article) %>
<h2>Add a comment:</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
	<%= f.label 			:commenter %>
	<%= f.text_field 	:commenter %>

	<%= f.label 			:body %>
	<%= f.text_area 	:body %>

	<%= f.submit %>
<% end %>


	<% @article.comments.each do |comment| %>
		<h4><%= comment.commenter %> wrote:</h4>
		<p><%= comment.body %></p>
	<% end %>
