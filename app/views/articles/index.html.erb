<h1>All Articles</h1>

<ul>
	<% @articles.each do |article| %>
		<li><%=link_to article.title, article %></li>
	<% end %>
</ul>

<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
	</tr>

	<% @articles.each do |article| %>
		<tr>
			<td><%= article.title %></td>
			<td><%= article.text %></td>
			<td><%= link_to 'Show', article_path(article)%></td>
		</tr>
	<% end %>
</table>